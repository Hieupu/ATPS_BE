{
  "name": "atps-backend",
  "version": "1.0.0",
  "description": "ATPS Backend API - Admin Training Platform System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:class-news-session": "jest scripts/testClassNewsSession.test.js",
    "test:dashboard": "node test/testDashboardLogs.js",
    "test:schedule": "node test/testClassScheduleSuggestions.js"
  },
  "keywords": [
    "atps",
    "backend",
    "api",
    "nodejs",
    "express",
    "mysql",
    "education",
    "training"
  ],
  "author": "ATPS Development Team",
  "license": "ISC",
  "dependencies": {
    "@cloudinary/react": "^1.14.3",
    "@cloudinary/url-gen": "^1.22.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/scripts/**/*.test.js",
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
